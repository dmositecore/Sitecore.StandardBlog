@using Sitecore.Mvc.Configuration
@{
    string homeUrl = Url.RouteUrl(MvcSettings.SitecoreRouteName, new RouteValueDictionary(new { pathInfo = "" }));
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/main.css">
    <script src="~/js/modernizr-2.8.3.js"></script>
</head>
<body class="docsite">

    @* @Html.ActionLink("Home", "Index", "Home",
        new { area = "" },
        new { @class = "navbar-brand" }) *@

    
    <header class="header">
        <div class="top-pane">
            <div class="column logo">
                <a class="home"
                   href="@Html.AttributeEncode(homeUrl)">
                    <img src="/img/logo.png" alt="Sitecore logo">
                    <span class="logo-ds">Standard Mvc Project</span>
                </a>
            </div>
            @*@Html.Partial("BurgerMenu")*@
            <p class="user-name">
            </p>
        </div>
    </header>


    <div class="body">
        <div class="wrapper" ng-click="closeAllSidebars($event)">

            @RenderSection("Breadcrumb", false)


            <!-- Main Section -->

            <section class="main-content inner-page clearfix">

                @RenderBody()

            </section>

            <footer class="footer">
                <p>&nbsp;</p>

                @RenderSection("FooterLinks", false)
                
                @*@Html.Partial("FooterLinks")*@

                <p><small>Rendered: @DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()</small></p>

                <section class="cellar clearfix">
                    <section class="connections">
                        <div class="connections-content">
                            @*<p class="connect">
                                <span>Connect With Sitecore On:</span>
                                <a href="#" target="_blank">Facebook</a> &nbsp;/&nbsp;
                                <a href="#" target="_blank">LinkedIn</a> &nbsp;/&nbsp;
                                <a href="#" target="_blank">Twitter</a> &nbsp;/&nbsp;
                                <a href="#" target="_blank">Youtube</a>
                            </p>
                            <p class="newsletter">
                                <span>Get Our Newsletter:</span>
                                <a href="#" target="_blank" class="subscribe">Subscribe here</a>
                            </p>*@
                        </div>
                    </section>
                    <section class="copyright">
                        <div class="copyright-content">
                            @*<a href="#" target="_blank">Privacy policy</a>
                            <a href="#" target="_blank">Legal notice</a>
                            <a href="#" target="_blank">DMCA Notice</a>*@
                            <a href="#" target="_blank">Copyright Sitecore © 2016</a>
                        </div>
                    </section>
                </section>

            </footer>

        </div>
    </div>

    @*<script src="~/js/jquery-2.1.3.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>*@
</body>

</html>